<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: [@board, @comment], local: true do |f| %>
      <%= f.label :body, Comment.model_name.human %>
      <%= f.text_area :body, rows: 4, placeholder: Comment.model_name.human, class: 'form-control mb-3' %>
      <%= f.submit (t 'defaults.post'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>